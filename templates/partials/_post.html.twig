<div class="mb-4 col-md-4 col-sm-6">
    <div class="card shadow-sm">
        <img src="{{ asset('uploads/posts/' ~ post.image) }}"
             alt="{{ post.title }}" class="img-fluid">
        <div class="card-body">
            <h5 class="card-title">{{ post.title }}</h5>
            <small class="text-muted">Rédigé par : <a href="#">{{ post.user.firstname }}</a> - le {{ post.createdAt | date('d/m/Y') }}</small>
            <a href="{{ path('default_post', {
                'category' : post.category.slug,
                'slug' : post.slug,
                'id' : post.id
            }) }}" class="btn mt-4 w-100 btn-outline-primary">Lire la suite</a>
        </div>
    </div>
</div>